---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Profile">
  <div class="container mx-auto py-16">
    <div class="card p-8">
      <div class="flex items-center space-x-6 mb-8">
        <img src="/avatar.svg" alt="User Avatar" class="w-24 h-24 rounded-full border-4 border-primary">
        <div>
          <h1 class="text-3xl font-bold text-primary">John Doe</h1>
          <p class="text-text-secondary">john.doe@example.com</p>
        </div>
      </div>
      <div>
        <h2 class="text-2xl font-bold mb-6 text-primary">Settings</h2>
        <form>
          <div class="mb-4">
            <label for="name" class="block mb-2">Name</label>
            <input type="text" id="name" value="John Doe" class="w-full px-4 py-2 rounded bg-background border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary" />
          </div>
          <div class="mb-4">
            <label for="email" class="block mb-2">Email</label>
            <input type="email" id="email" value="john.doe@example.com" class="w-full px-4 py-2 rounded bg-background border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary" />
          </div>
          <div class="mb-6">
            <label for="password" class="block mb-2">New Password</label>
            <input type="password" id="password" class="w-full px-4 py-2 rounded bg-background border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary" />
          </div>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>

        <div class="mt-8">
            <button id="logout-btn" class="btn btn-danger">Logout</button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { auth } from "../firebase/client";
  import { onAuthStateChanged } from "firebase/auth";
  import { logOut } from "../firebase/auth";

  onAuthStateChanged(auth, (user) => {
    if (user) {
        const userName = document.querySelector('h1');
        const userEmail = document.querySelector('p');
        userName.textContent = user.displayName || 'No Name';
        userEmail.textContent = user.email;
    } else {
      window.location.href = "/login";
    }
  });

  const logoutBtn = document.getElementById("logout-btn");
  logoutBtn.addEventListener("click", async () => {
    try {
      await logOut();
      window.location.href = "/login";
    } catch (error) {
      alert(error.message);
    }
  });
</script>
